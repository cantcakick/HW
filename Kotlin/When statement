fun main() {
    println("Can I stand the rain?")
    val moistureLevel = 170
        when {
            moistureLevel < 40 -> {
                println("Not that bad")
            }
            moistureLevel <= 80 -> {
                println("Getting a little soggy...")
            }
            moistureLevel <= 100 -> {
                println("I can't stand the rain!")
            }
            else -> {
                println("I'm tired of this")
            }
        }
}