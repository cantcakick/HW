# tuples are not lists and cannot use .append() or del commands

dictionary = {"cat": "chat", "dog": "chien", "horse": "cheval"} # Dictionaries work in key : value pairs
phone_numbers = {'boss': 5551234567, 'Suzy': 22657854310} 
empty_dictionary = {}
# Key CANNOT be a list
print(dictionary)
print(phone_numbers)
print(empty_dictionary)
words = ['cat', 'steve', 'sirloin']
for word in words: #dictionaries cannot be iterated through like lists
    if word in dictionary:
        print(word, ":", dictionary[word])
    else:
        print(word, "is not in dictionary")

#use .keys() in for loop to iterate through dictionary
dictionary = {"cat": "chat", "dog": "chien", "horse": "cheval"}

for key in dictionary.keys():
    print(key, "->", dictionary[key])

#use .values() in for loop to iterate through values
for val in dictionary.values():
    print(val)

# use .items() to return tuples as key:value pair
dictionary = {"cat": "chat", "dog": "chien", "horse": "cheval"}
 
for english, french in dictionary.items():
    print(english, "->", french)
    
dictionary['cat'] = 'minou'
print(dictionary)

#adding a new key
dictionary = {"cat": "chat", "dog": "chien", "horse": "cheval"}

dictionary['swan'] = 'cygne'
print(dictionary)

# insert using update() method
dictionary = {"cat": "chat", "dog": "chien", "horse": "cheval"}

dictionary.update({"duck": "canard"})
print(dictionary)

#remove a key:value pair **removing the key removes the value by default
dictionary = {"cat": "chat", "dog": "chien", "horse": "cheval"}

del dictionary['dog']
print(dictionary)

#use popitem() to remove last item from dictionary
dictionary = {"cat": "chat", "dog": "chien", "horse": "cheval"}

dictionary.popitem()
print(dictionary)    # outputs: {'cat': 'chat', 'dog': 'chien'}

