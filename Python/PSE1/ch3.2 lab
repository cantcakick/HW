'''
user_word = input("Enter a word: ")
user_word = user_word.upper()
vowel = ['A', 'E', 'I', 'O', 'U']
for letter in user_word: #iterate through user_word
    if letter in vowel: #iterate through vowels list 
        continue #continue/ ignore vowels
    elif letter != vowel:
        print(letter,"\n") #will only print if letter is NOT a vowel
